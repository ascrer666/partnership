/* Reset */
* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}

html {
    font-size: 16px;
    scroll-behavior: smooth;
}

body {
    font-family: 'Poppins', sans-serif;
    color: var(--dark-gray);
    background: var(--light-gray);
    line-height: 1.6;
    display: flex;
    flex-direction: column;
    min-height: 100vh;
}

.page-wrapper {
    flex: 1 0 auto;
    display: flex;
    flex-direction: column;
}

section {
    padding: 4rem 0;
}

section + section {
    padding-top: 3.5rem;
}

.container {
    width: min(92%, var(--container-width));
    margin: 0 auto;
}

.section-title {
    font-size: clamp(2rem, 2.8vw, 2.6rem);
    font-weight: 600;
    text-align: center;
    margin-bottom: 2.5rem;
}

.section-title-left {
    font-size: clamp(1.9rem, 2.5vw, 2.3rem);
    font-weight: 600;
    margin-bottom: 1.6rem;
}

p {
    margin-bottom: 1rem;
    color: var(--dark-gray);
}
/* Header & Navigation */
.header {
    position: fixed;
    inset: 0 0 auto 0;
    background: rgba(255, 255, 255, 0.94);
    backdrop-filter: blur(14px);
    box-shadow: 0 6px 24px rgba(0, 0, 0, 0.08);
    z-index: 1000;
}

.nav-container {
    width: min(92%, var(--container-width));
    margin: 0 auto;
    padding: 0.9rem 0;
    display: flex;
    align-items: center;
    justify-content: space-between;
}

.logo-img {
    height: 52px;
    width: auto;
}

.nav-menu {
    display: flex;
    align-items: center;
    list-style: none;
    gap: 1.75rem;
    transition: var(--transition);
}

.nav-link {
    color: var(--dark-gray);
    font-weight: 500;
    text-decoration: none;
    position: relative;
    transition: var(--transition);
}

.nav-link::after {
    content: '';
    position: absolute;
    left: 0;
    bottom: -0.4rem;
    width: 0;
    height: 2px;
    background: var(--primary-turquoise);
    transition: var(--transition);
}

.nav-link:hover {
    color: var(--primary-turquoise);
}

.nav-link:hover::after {
    width: 100%;
}

.whatsapp-btn {
    display: inline-flex;
    align-items: center;
    gap: 0.45rem;
    padding: 0.45rem 1.05rem;
    border-radius: 22px;
    background: #25D366;
    color: var(--white);
    text-decoration: none;
    font-size: 0.85rem;
    font-weight: 500;
    box-shadow: 0 8px 18px rgba(37, 211, 102, 0.25);
    transition: var(--transition);
}

.whatsapp-btn:hover {
    background: #1baa52;
    transform: translateY(-1px);
}

.hamburger {
    display: none;
    flex-direction: column;
    gap: 6px;
    width: 34px;
    height: 30px;
    justify-content: center;
    cursor: pointer;
}

.hamburger span {
    display: block;
    height: 2px;
    background: var(--dark-gray);
    transition: var(--transition);
    border-radius: 999px;
}
/* Hero */
.hero {
    position: relative;
    min-height: 72vh;
    display: flex;
    align-items: center;
    padding-top: 6rem;
    background: var(--dark-gray);
}

.hero-video-bg {
    position: absolute;
    inset: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    z-index: 0;
}

.hero-overlay {
    position: absolute;
    inset: 0;
    background: linear-gradient(90deg, rgba(0,0,0,0.6), rgba(0,0,0,0.25));
    z-index: 1;
}

.hero .container {
    position: relative;
    z-index: 2;
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: clamp(2.5rem, 5vw, 5rem);
    align-items: center;
}


.hero-title {
    color: var(--white);
    font-size: clamp(2.3rem, 3.8vw, 3.1rem);
    font-weight: 700;
    margin-bottom: 1rem;
}

.hero-subtitle {
    color: rgba(255,255,255,0.88);
    margin-bottom: 1.7rem;
}

.hero-buttons {
    display: flex;
    flex-wrap: wrap;
    gap: 1rem;
}

.hero-content {
    max-width: 520px;
}

.hero-image {
    display: flex;
    justify-content: flex-end;
    padding-left: 3rem;
}

.partnership-stats {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    width: 100%;
    max-width: 280px;
    margin-left: auto;
}

.stat-card {
    background: var(--white);
    border-radius: var(--border-radius);
    padding: 1.1rem 1.4rem;
    display: flex;
    flex-direction: column;
    gap: 0.35rem;
    align-items: flex-start;
    text-align: left;
}

.stat-number {
    font-size: 1.7rem;
    font-weight: 600;
    color: var(--primary-turquoise);
    line-height: 1.1;
}

.stat-label {
    font-size: 0.95rem;
    color: var(--primary-gray);
}



    .partnership-stats {
        max-width: 300px;
    }
}

.btn {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: 0.85rem 1.8rem;
    border-radius: 999px;
    border: none;
    cursor: pointer;
    font-weight: 500;
    text-decoration: none;
    transition: var(--transition);
}

.btn-primary {
    background: var(--primary-turquoise);
    color: var(--white);
}

.btn-primary:hover {
    background: var(--primary-turquoise-dark);
}

.btn-secondary {
    background: var(--white);
    border: 1px solid rgba(27,163,163,0.35);
    color: var(--primary-turquoise);
}


.btn-secondary:hover {
    background: rgba(255,255,255,0.28);
}

.btn-full {
    width: 100%;
    border-radius: 12px;
}












/* Who We Are & Who Can Join */
.who-can-join {
    background: var(--white);
}

.join-content {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 2.5rem;
    align-items: flex-start;
}

.join-about p {
    margin-bottom: 1.2rem;
}

.join-list {
    display: grid;
    gap: 0.95rem;
    margin-top: 1.3rem;
}

.join-item {
    display: flex;
    align-items: center;
    gap: 0.8rem;
    padding: 0.85rem 1rem;
    border-radius: 12px;
    border: 1px solid rgba(27,163,163,0.18);
    background: var(--white);
    transition: transform 0.25s ease, box-shadow 0.25s ease, border-color 0.25s ease, background-color 0.25s ease;
}

.join-item:hover,
.join-item:focus-within,
.clinic-feature:hover,
.clinic-feature:focus-within {
    transform: translateY(-4px);
    border-color: rgba(27,163,163,0.35);
    box-shadow: 0 18px 36px rgba(27,163,163,0.16);
    background-color: rgba(255,255,255,0.98);
}


.join-icon {
    width: 36px;
    height: 36px;
    border-radius: 50%;
    background: linear-gradient(135deg, var(--primary-turquoise), var(--primary-turquoise-dark));
    display: grid;
    place-items: center;
    flex-shrink: 0;
    box-shadow: 0 6px 14px rgba(27,163,163,0.2);
    position: relative;
    --icon-size: 18px;
}
/* Clinic Features */
.clinic-features {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(240px, 1fr));
    gap: 1.2rem;
    margin-bottom: 2.5rem;
}

.clinic-feature {
    display: flex;
    align-items: center;
    gap: 0.85rem;
    padding: 1.2rem 1.3rem;
    background: var(--white);
    border-radius: var(--border-radius);
    border: 1px solid rgba(27,163,163,0.12);
    transition: transform 0.25s ease, box-shadow 0.25s ease, border-color 0.25s ease, background-color 0.25s ease;
}

.feature-icon {
    width: 46px;
    height: 46px;
    border-radius: 50%;
    background: linear-gradient(135deg, var(--primary-turquoise), var(--primary-turquoise-dark));
    display: grid;
    place-items: center;
    flex-shrink: 0;
    box-shadow: 0 8px 18px rgba(27,163,163,0.18);
    position: relative;
    --icon-size: 20px;
}



.treatments-section {
    background: var(--light-gray);
    border-radius: var(--border-radius);
    padding: 2.4rem;
}

.treatments-title {
    font-size: 1.35rem;
    font-weight: 600;
    margin-bottom: 1.5rem;
}

.treatments-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
    gap: 0.9rem;
}

.treatment-item {
    display: flex;
    align-items: center;
    gap: 0.65rem;
    padding: 0.75rem 1rem;
    border-radius: 11px;
    background: var(--white);
    box-shadow: 0 10px 24px rgba(0,0,0,0.05);
}

.treatment-item::before {
    content: '\2714';
    color: var(--primary-turquoise);
    font-weight: 600;
    font-size: 1rem;
    line-height: 1;
    margin-right: 0.35rem;
}
/* Testimonials */
.testimonials {
    background: var(--light-gray);
}

.testimonials-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 1.75rem;
}

.testimonial-item {
    display: flex;
    gap: 1.1rem;
    padding: 1.9rem;
    background: var(--white);
    border-radius: var(--border-radius);
}

.testimonial-image {
    flex-shrink: 0;
    width: 72px;
    height: 72px;
    border-radius: 50%;
    background: linear-gradient(135deg, var(--primary-turquoise), var(--primary-turquoise-dark));
    display: grid;
    place-items: center;
    color: var(--white);
    font-size: 1.6rem;
}

.testimonial-image::before {
    content: '\2728';
}

.testimonial-text {
    font-style: italic;
    color: var(--dark-gray);
}

.testimonial-author {
    color: var(--primary-turquoise);
    font-weight: 600;
}
/* Call to Action */
.cta-section {
    background: linear-gradient(135deg, var(--primary-turquoise), var(--primary-turquoise-dark));
    color: var(--white);
    text-align: center;
    border-radius: var(--border-radius);
    padding: 3.2rem 0;
    margin-top: 3rem;
}

.cta-description {
    max-width: 680px;
    margin: 0 auto 2rem;
