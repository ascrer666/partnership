    box-shadow: 0 20px 40px rgba(0,0,0,0.12);
}

.badges-image {
    width: 85%;
    max-width: 440px;
    margin: 0 auto;
}
/* Quartz Clinique visual update */
.key-benefits {
    background: linear-gradient(180deg, #f5fbfa 0%, #eef7f6 100%);
    border-radius: calc(var(--border-radius) * 1.4);
    padding: 3rem 0 3.5rem;
}

.benefits-showcase {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(240px, 1fr));
    gap: clamp(1.2rem, 3vw, 2rem);
    align-items: stretch;
}

.benefit-showcase {
    position: relative;
    background: var(--white);
    border-radius: calc(var(--border-radius) * 1.05);
    padding: 1.9rem 1.7rem;
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
    box-shadow: var(--shadow-light);
    border: 1px solid rgba(27,163,163,0.08);
    transition: transform 0.3s ease, box-shadow 0.3s ease;
}

.benefit-showcase::before {
    content: '';
    position: absolute;
    inset: 0;
    opacity: 0.6;
    pointer-events: none;
    border-radius: inherit;
    transition: opacity 0.3s ease;
}

.benefit-showcase:nth-child(1)::before { background: linear-gradient(135deg, rgba(27,163,163,0.2), rgba(255,255,255,0.9)); }
.benefit-showcase:nth-child(2)::before { background: linear-gradient(135deg, rgba(19,128,128,0.18), rgba(255,255,255,0.9)); }
.benefit-showcase:nth-child(3)::before { background: linear-gradient(135deg, rgba(8,146,170,0.18), rgba(255,255,255,0.9)); }
.benefit-showcase:nth-child(4)::before { background: linear-gradient(135deg, rgba(33,178,178,0.18), rgba(255,255,255,0.9)); }

.benefit-showcase > * { position: relative; z-index: 1; }

.benefit-showcase:hover {
    transform: translateY(-4px);
    box-shadow: 0 24px 44px rgba(27,163,163,0.16);
}

.benefit-showcase:hover::before { opacity: 0.85; }

.benefit-visual {
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
}

.benefit-number {
    font-size: clamp(2.1rem, 3.6vw, 2.6rem);
    font-weight: 700;
    color: var(--primary-turquoise);
    text-shadow: 0 6px 14px rgba(27,163,163,0.2);
}

.benefit-desc {
    font-size: 0.8rem;
    letter-spacing: 0.08em;
    text-transform: uppercase;
    color: var(--mid-gray);
    font-weight: 600;
}

/* Clinic gallery */
.clinic-gallery {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(260px, 1fr));
    gap: clamp(1.2rem, 2.5vw, 1.8rem);
    margin-top: 2.6rem;
}

.gallery-item {
    position: relative;
    border-radius: calc(var(--border-radius) * 1.1);
    overflow: hidden;
    box-shadow: var(--shadow-light);
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    aspect-ratio: 4 / 3;
    cursor: pointer;
}

.gallery-item img {
    width: 100%;
    height: 100%;
    display: block;
    object-fit: cover;
}

.gallery-item:hover,
.gallery-item:focus-visible {
    transform: translateY(-4px);
    box-shadow: 0 24px 44px rgba(27,163,163,0.16);
}

.gallery-item:focus-visible {
    outline: 3px solid rgba(27,163,163,0.45);
    outline-offset: 6px;
}

.gallery-overlay {
    position: absolute;
    inset: 0;
    background: linear-gradient(180deg, rgba(0,0,0,0.08) 0%, rgba(0,0,0,0.6) 100%);
    display: flex;
    flex-direction: column;
    justify-content: flex-end;
    align-items: center;
    gap: 0.45rem;
    padding: 1.4rem;
    color: var(--white);
    opacity: 0;
    pointer-events: none;
    transition: opacity 0.3s ease;
}

.gallery-item:hover .gallery-overlay,
.gallery-item:focus-visible .gallery-overlay {
    opacity: 1;
}

.gallery-overlay h3 {
    font-size: 1rem;
    font-weight: 600;
}

.gallery-overlay span {
    font-size: 0.82rem;
    letter-spacing: 0.08em;
    text-transform: uppercase;
}

/* Lightbox */
.gallery-lightbox {
    display: none;
    position: fixed;
    inset: 0;
    background: rgba(0,0,0,0.9);
    z-index: 1200;
    justify-content: center;
    align-items: center;
    padding: 1.5rem;
}

.gallery-lightbox .modal-content {
    background: transparent;
    width: min(92vw, 900px);
    margin: 0;
    box-shadow: none;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 1rem;
    position: relative;
}

.gallery-lightbox__title {
    color: rgba(255,255,255,0.9);
    font-size: 1.05rem;
    text-align: center;
}

#galleryLightboxImage {
    max-width: 90vw;
    max-height: 80vh;
    border-radius: var(--border-radius);
    box-shadow: var(--shadow-medium);
}

.gallery-lightbox .close-modal {
    position: absolute;
    top: -48px;
    right: 0;
    width: 42px;
    height: 42px;
    border-radius: 50%;
    border: none;
    background: rgba(255,255,255,0.2);
    color: var(--white);
    font-size: 1.6rem;
    line-height: 1;
    display: grid;
    place-items: center;
    cursor: pointer;
    transition: background 0.3s ease, transform 0.2s ease;
}

.gallery-lightbox .close-modal:hover,
.gallery-lightbox .close-modal:focus-visible {
    background: rgba(255,255,255,0.34);
    transform: scale(1.05);
}

/* Certification panel */
.certification-section {
    background: var(--white);
    border-radius: calc(var(--border-radius) * 1.3);
    padding: 2.6rem;
    box-shadow: var(--shadow-light);
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(260px, 1fr));
    gap: 2.2rem;
}

.certification-image img {
    width: 100%;
    border-radius: calc(var(--border-radius) * 1.05);
    box-shadow: 0 20px 40px rgba(0,0,0,0.12);
}

.badges-image {
    width: 82%;
    max-width: 420px;
    margin: 0 auto;
    display: block;
}

@media (max-width: 768px) {
    .benefit-showcase {
        padding: 1.6rem 1.4rem;
        text-align: center;
        align-items: center;
    }

    .gallery-lightbox {
        padding: 1rem;
    }

    .gallery-lightbox .modal-content {
        width: 94vw;
    }

    #galleryLightboxImage {
        max-width: 92vw;
        max-height: 72vh;
    }

    .gallery-lightbox .close-modal {
        top: -40px;
        width: 38px;
        height: 38px;
    }
}

@media (max-width: 540px) {
    #galleryLightboxImage {
        max-width: 90vw;
        max-height: 65vh;
    }

    .gallery-lightbox__title {
        font-size: 0.95rem;
        padding: 0 1rem;
    }
}

